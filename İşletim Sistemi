    <button class="app-btn" onclick="openCalculator()">Hesap Makinesi</button>
    <button class="app-btn" onclick="openNotepad()">Not Defteri</button>
    <button class="app-btn" onclick="openFileManager()">Dosya YÃ¶neticisi</button>
